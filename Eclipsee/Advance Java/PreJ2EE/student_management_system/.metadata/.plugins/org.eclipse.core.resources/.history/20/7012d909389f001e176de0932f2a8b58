package com.jsp.sms.controller;

import java.util.ArrayList;
import java.util.Scanner;

import com.jsp.sms.model.Student;

public class StudentUtility {
//	static ArrayList<Student> studentList = new ArrayList<Student>();
	static Scanner myInput=new Scanner(System.in);
	public static Student addStudent()
	{
		System.out.println("Enter Student ID:");
		int student_id=myInput.nextInt();
		myInput.nextLine();
		System.out.println("Enter Student Name:");
		String student_name=myInput.nextLine();
		System.out.println("Enter Student Age:");
		int student_age=myInput.nextInt();
		myInput.nextLine();
		Student student = new Student(student_id, student_name, student_age);
		student.setId(student_id);
		student.setName(student_name);
		student.setAge(student_age);
		return student;

	}
