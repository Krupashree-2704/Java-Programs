package com.jsp.sms.view;


import java.util.ArrayList;
import java.util.Scanner;

import com.jsp.sms.controller.StudentUtility;
import com.jsp.sms.model.Student;





public class StudentView {
	static Scanner myInput=new Scanner(System.in); 
	static StudentUtility studentUtility=new StudentUtility();
	static ArrayList <Student>studentList=new ArrayList<Student>();
	public static void main(String[] args) {
		System.out.print("1.Insert Student Details\n2.Add Students\n3.Update Student Details\n4.Delete Student\nEnter your choice:");
		byte userChoice=myInput.nextByte();
		
		do {
			switch (userChoice) {
			case 1:
				Student student = new Student();
				System.out.println("Enter Student ID:");
				int student_id=myInput.nextInt();
				myInput.nextLine();
				System.out.println("Enter Student Name:");
				String student_name=myInput.nextLine();
				System.out.println("Enter Student Age:");
				int student_age=myInput.nextInt();
				myInput.nextLine();
				student.setId(student_id);
				student.setName(student_name);
				student.setAge(student_age);
				studentList.add(student);
				student.setStudent(studentList);
				System.out.println(studentList);
				
				
				break;
			case 2:
				System.out.println(studentList);
				
				break;
			case 3:
				break;
			default:
				break;
			}
			
		} while (true);
		
		
		

	}

}
